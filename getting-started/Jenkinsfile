echo "hello world!"
node {
    stage("findout whats in local") {
        sh 'pwd ; ls -ltr'
    }
    stage("checkout scm") {
        git branch: 'main', url: 'https://github.com/sdputurn/terrafrom-getting-started.git'
    }
    stage("tf initialisation") {
        dir('getting-started') {
            sh 'export AWS_PROFILE=sdputurn'
            sh 'terraform init'
        }
    }
    stage("tf plan"){
        dir('getting-started') {
            sh 'AWS_PROFILE=sdputurn terraform plan'
        }
    }
    stage("apply") {
        dir('getting-started') {
            sh 'AWS_PROFILE=sdputurn terraform plan'
        }
    }
    // comment 1
}
